<?xml version="1.0"?>
<robot name="node2_table" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="node2_table"
      params="x:=0 y:=0 z:=0 R:=0 P:=0 Y:=0 scale:=1 prefix parent">

    <xacro:include filename="$(find morpheus_teleop)/urdf/macros/hab_table.xacro" />
    <xacro:hab_table
        prefix=""
        parent="world"
        x="${x}"
        y="${y}"
        z="${z + (0.0254 * 34.75)}"
        scale="1"
    />
    
    <xacro:include filename="$(find morpheus_teleop)/urdf/macros/node2.xacro" />
    <xacro:node2
        prefix=""
        parent="world"
        x="${x + (0.0254 * 63)}"
        y="${y + (0.0254 * 14.5)}"
        z="${z + (0.0254 * 34.75) + (0.0254 * 21)}"
        scale="1"
    />
    <!-- scale=0.0254 meters/inch -->

  </xacro:macro>
</robot>