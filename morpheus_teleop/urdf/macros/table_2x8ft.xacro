<?xml version="1.0"?>

<robot name="table_2x8ft" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="table_2x8ft"
    params="x:=0 y:=0 z:=0 scale:=0.0254 prefix parent">

    <link name="${prefix}table_2x8ft">
        <inertial>
            <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
            <mass value="1"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>
        <visual>
            <origin rpy="-1.57079632679 0 0" xyz="0 0 ${-scale * 1}"/>
            <geometry>
                <mesh filename="package://morpheus_teleop/meshes/components/visual/table_2x8ft.obj" scale="${scale} ${scale} ${scale}"/>
            </geometry>
            <material name="grey">
                <color rgba="0.3 0.3 0.3 1" />
            </material>
        </visual>
        <collision>
            <origin rpy="-1.57079632679 0 0" xyz="0 0 ${-scale * 1}" />
            <geometry>
                <mesh filename="package://morpheus_teleop/meshes/components/collision/table_2x8ft.obj" scale="${scale} ${scale} ${scale}"/>
            </geometry>
        </collision>
    </link>

    <joint name="${prefix}table_2x8ft_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}table_2x8ft" />
      <origin xyz="${x} ${y} ${z}" />
    </joint>
  </xacro:macro>

</robot>