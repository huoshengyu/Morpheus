<launch>
    <arg name="robot_model"                         default="vx300s"/>
    <arg name="robot_name"                          default="$(arg robot_model)"/>

    <arg name="robot_mode"                          default="fake"/>
    <arg name="control_mode"                        default="interbotix"/>
    <arg name="controller"                          default="ps4"/>
    <arg name="use_keyboard"                        default="false"/>
    <arg name="haptics"                             default="true"/> <!--This is for collison haptic feedback -->

    <arg name="xacro_path"                          default="$(find morpheus_description)/urdf/scenes/trossen_hera_scene.xacro"/>
    <arg name="srdf_path"                           default="$(find morpheus_description)/srdf/scenes/$(arg robot_model).srdf.xacro"/>
    <arg name="trajvib"                             default="false"/>  <!--This is for trajectory haptic feedback -->

    <!-- Launch trossen and controls -->
    <include file="$(find morpheus_main)/launch/trossen_main.launch">
        <arg name="robot_model"                         value="$(arg robot_model)"/>
        <arg name="robot_name"                          value="$(arg robot_name)"/>

        <arg name="robot_mode"                          value="$(arg robot_mode)"/>
        <arg name="control_mode"                        value="$(arg control_mode)"/>
        <arg name="controller"                          value="$(arg controller)"/>
        <arg name="use_keyboard"                        value="$(arg use_keyboard)"/>
        <arg name="haptics"                             value="$(arg haptics)"/>

        <arg name="xacro_path"                          value="$(arg xacro_path)"/>
        <arg name="srdf_path"                           value="$(arg srdf_path)"/>
    </include>
    
    <group ns="$(arg robot_name)">

        <!-- Launch trajectory node -->
        <include file="$(find morpheus_trajectory)/launch/trajectory.launch">
            <arg name="arm_group"                       value="interbotix_arm"/>
            <arg name="gripper_group"                   value="interbotix_gripper"/>
            <arg name="trajvib"                         value="$(arg trajvib)"/>  <!-- Pass it here -->
        </include>

    </group>



</launch>
